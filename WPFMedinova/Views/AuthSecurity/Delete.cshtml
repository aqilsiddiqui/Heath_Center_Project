@model WPFMedinova.Models.AppointmentModel

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = null;                              // No layout is used for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        @* <h4 class="text-center mb-4">Are you sure you want to delete this appointment?</h4> *@

        <div class="card" style="width: 100%; max-width: 600px; margin: auto;">
            <div class="card-header">
                <h5 class="mb-0">Appointment Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Patient Name</dt>
                    <dd class="col-sm-8">@Model.Patient_Name</dd>

                    <dt class="col-sm-4">Specialization</dt>
                    <dd class="col-sm-8">@Model.Specialization</dd>

                    <dt class="col-sm-4">Doctor</dt>
                    <dd class="col-sm-8">@Model.Doctor</dd>

                    <dt class="col-sm-4">Appointment Date</dt>
                    <dd class="col-sm-8">@Model.Appointment_Date.ToString("g")</dd>
                </dl>
            </div>
        </div>

        <!-- Form to confirm deletion -->
        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Appointment_List" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
